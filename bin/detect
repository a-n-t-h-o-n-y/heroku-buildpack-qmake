#!/bin/sh
# bin/detect BUILD_DIR

# Depends on heroku-buildpack-apt install of qmake
echo "BUILD_DIR ${1}";

echo "ls BUILD_DIR/.apt/usr/lib"
ls -a ${1}/.apt/usr/lib

QMAKE_EXE="${BUILD_DIR}/.apt/usr/lib/qt5/bin/qmake"

# echo "pwd:"
# pwd;

# echo "ls:";
# ls;

# echo "ls -a ~"
# ls -a ~

# echo "PATH:"
# echo $PATH

# echo "clang --version"
# clang --version

echo "QMake Version:"
${QMAKE_EXE} --version
# exit 1;

# which ${QMAKE_EXE} >/dev/null && echo "QMake";
